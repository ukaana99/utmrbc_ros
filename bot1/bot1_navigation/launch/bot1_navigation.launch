<launch>
  <!-- Arguments -->
  <arg name="model" default="bot1"/>
  <arg name="map_file" default="$(find bot1_navigation)/maps/robocon20.yaml"/>
  <arg name="open_rviz" default="true"/>
  <arg name="move_forward_only" default="false"/>

  <!-- Bot1 -->
  <include file="$(find bot1_bringup)/launch/bot1_remote.launch">
    <arg name="model" value="$(arg model)" />
  </include>

  <!-- Map server -->
  <node pkg="map_server" name="map_server" type="map_server" args="$(arg map_file)"/>

  <!-- AMCL -->
  <include file="$(find bot1_navigation)/launch/amcl.launch"/>

  <!-- move_base -->
  <include file="$(find bot1_navigation)/launch/move_base.launch">
    <arg name="model" value="$(arg model)" />
    <arg name="move_forward_only" value="$(arg move_forward_only)"/>
  </include>

  <!-- rviz -->
  <group if="$(arg open_rviz)"> 
    <node pkg="rviz" type="rviz" name="rviz" required="true"
          args="-d $(find bot1_navigation)/rviz/bot1_navigation.rviz"/>
  </group>
</launch>
